<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailFragment">

    <ImageView
        android:id="@+id/detailIV"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detailTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintTop_toBottomOf="@+id/detailIV"/>

    <TextView
        android:id="@+id/detailNamaTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danau Toba"
        android:layout_marginStart="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/detailTB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailIV" />

    <TextView
        android:id="@+id/detailLocationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        app:layout_constraintStart_toStartOf="@+id/detailNamaTV"
        app:layout_constraintTop_toBottomOf="@+id/detailTB"/>

    <TextView
        android:id="@+id/detailDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/detailLocationTV"
        app:layout_constraintTop_toBottomOf="@+id/detailLocationTV" />
</androidx.constraintlayout.widget.ConstraintLayout>